<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.homeaway.seatgeekevents.EventDetailsFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrowback"
            android:layout_alignTop="@+id/constraintText"
            android:layout_alignBottom="@+id/favorite" />

        <TextView
            android:id="@+id/constraintText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/event_name_text"
            android:layout_toRightOf="@id/backbutton"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:paddingLeft="60dp"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_favorite_outline"
            android:layout_toRightOf="@id/constraintText"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
    <include layout="@layout/autocomplete_list_row"></include>


</LinearLayout>
